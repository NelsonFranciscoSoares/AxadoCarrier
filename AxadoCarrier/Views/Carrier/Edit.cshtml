@using AxadoCarrier.WebApplication.Models.CarrierModels
@model CarrierViewModel

<script>
    $(function () {
        $('.nav li#carrierManagementId').addClass('active');
    });
</script>

<h2>Carrier Edit</h2>

<br />

@using (@Html.BeginForm(MVC.Carrier.ActionNames.Edit, MVC.Carrier.Name, FormMethod.Post, new {@class="form-horizontal"}))
{
    @Html.HiddenFor(param => param.Id)

    <div class="form-group">
        <label class="col-md-2 control-label">Code</label>

        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="@Model.Id" disabled>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Name</label>

        <div class="col-sm-10">
            @Html.TextBoxFor(param => param.Name, new {@class="form-control"})
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Description</label>

        <div class="col-sm-10">
            @Html.TextBoxFor(param => param.Description, new {@class="form-control"})
        </div>
    </div>

    <button type="submit" class="btn btn btn-primary">Update</button>
    @Html.ActionLink("Cancel", MVC.Carrier.ActionNames.Index, MVC.Carrier.Name, new { @class = "btn btn-primary" })
}
